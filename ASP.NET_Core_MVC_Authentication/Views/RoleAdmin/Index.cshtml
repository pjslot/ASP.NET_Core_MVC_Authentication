@using Microsoft.AspNetCore.Identity;

@model IEnumerable<IdentityRole>
<div class="bg-primary m-1 p-l"><h4>Роли</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-sm table-bordered m-1 р-1">
	<tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>
	@if (Model.Count() == 0)
	{
		<tr><td colspan="4" class="text-center">Ролей не найдено</td></tr>
	}
	else
	{
		foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td identity-role="@role.Id"></td>
				<td>
					<form asp-action="Delete" asp-route-id="@role.Id" method="post">
						<a class="btn btn-sm btn-primary" asp-action="Edit"
				   asp-route-id="@role.Id">Править</a>
						<button type="submit" class="btn btn-sm btn-danger">
							Удалить
						</button>
					</form>
				</td>
			</tr>
		}
	}
</table>
<a class="btn btn-primary" asp-action="Create">Создать</a>